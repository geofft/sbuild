use strict;
use warnings;

use locale;
use POSIX qw(locale_h);
use Getopt::Long;
use Sbuild qw(help_text version_text usage_error check_packages);
use Sbuild::Conf;
use Sbuild::Utility qw(setup cleanup shutdown);

package main;

our $mode = undef;

my $conf = Sbuild::Conf->new();

GetOptions (
    "h|help" => sub { help_text("1", "sbuild-checkpackages"); },
    "V|version" => sub {version_text("sbuild-checkpackages"); },
    "l|list" => sub { $mode = "list"; },
    "s|set" => sub { $mode = "set"; })
or usage_error("sbuild-checkpackages", "Error parsing command-line options");

usage_error("sbuild-checkpackages", "--list or --set must be specified")
    if (@ARGV != 1 || !defined($mode));

my $chroot = $ARGV[0];

setlocale(LC_COLLATE, "POSIX");
$ENV{'LC_COLLATE'} = "POSIX";

my $session = setup($chroot, $conf) or die "Chroot setup failed";
my $chroot_dir = $session->{'Location'};

check_packages($conf, $chroot_dir, $mode);

cleanup($conf);
exit 0;
