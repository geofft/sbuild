use strict;
use warnings;

use Getopt::Long;
use Sbuild qw(help_text version_text usage_error);
use Sbuild::Conf;
use Sbuild::Utility qw(setup cleanup);

package main;

my $conf = Sbuild::Conf->new();
$conf->set('CWD', '/');

GetOptions (
    "h|help" => sub { help_text("1", "sbuild-apt"); },
    "V|version" => sub {version_text("sbuild-apt"); })
or usage_error("sbuild-apt", "Error parsing command-line options");

usage_error("sbuild-apt", "Incorrect number of options") if (@ARGV < 2);

my $chroot = shift @ARGV;
my $command = shift @ARGV;

if ($command eq "apt-get") {
    $command = $conf->get('APT_GET');
} elsif ($command eq "apt-cache") {
    $command = $conf->get('APT_CACHE');
} else {
    usage_error("sbuild-apt",
		"Bad command $command.  Allowed commands: apt-get or apt-cache\n");
}

my $session = setup($chroot, $conf) or die "Chroot setup failed";

my $status = $session->run_apt_command(
    { COMMAND => [$command, @ARGV],
      ENV => {'DEBIAN_FRONTEND' => 'noninteractive'},
      USER => 'root',
      PRIORITY => 1,
      DIR => '/' });

cleanup($conf);

exit $status;
